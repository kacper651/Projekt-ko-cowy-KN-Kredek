@model BoardGameService.Models.Comment

@{
	ViewData["Title"] = "Dodaj komentarz";
}

<h4>Dodaj komentarz do gry:</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="BoardGameId" type="hidden" value=@ViewBag.game.Id/>
            
            <div class="form-group">
                <label asp-for="Author" class="control-label">Nick</label>
                <input asp-for="Author" class="form-control"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Rating" class="control-label">Ocena</label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label">Komentarz</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Dodaj komentarz!" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>